{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false, // Todo: change
        "module": "ES2022",
        "target": "es2022",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "baseUrl": "src",
        "paths": {
            "*": [
                "src/types/*"
            ],
            "SharedComponents/*": [
                "SharedComponents/*"
            ],
            "Theme": [
                "theme.ts"
            ],
            "Projects": [
                "projects"
            ],
            "Posts": [
                "posts"
            ],
            "Pages": [
                "pages/*"
            ],
            "hooks": [
                "hooks/*"
            ]
        },
        "types": [
            "mdx"
        ],
    },
    "exclude": [
        "./node_modules/*"
    ],
}